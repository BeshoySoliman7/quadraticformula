//the program slove quadratic equation 
#include <iostream>
#include <cmath>

int main() {
    //Declare the variable a,b,c
  int a;
  int b;
  int c;

//Print a 
  std::cout <<"Enter a:";
  std::cin >> a;
// let the user type 
  std::cout <<"Enter b:";
  std::cin >> b;

  std::cout <<"Enter c:";
  std::cin >> c;

  double root1;
  double root2;
//write the formula of the quadratic 
root1 = (-b + std::sqrt(b*b - 4*a*c)) / (2*a);

root2= (-b - std::sqrt(b*b -4*a*c)) / (2*a);


//prints root 1 and 2 
std::cout << "Root 1 is " << root1 << "\n";
std::cout << "Root 2 is" << root2 << "\n";
}
